  private getIcon(type: IconType): string {
    switch (type) {
      case 'home':
        return this.icons.home
      case 'activity':
        return this.icons.activity
      case 'records':
        return this.icons.records
      case 'profile':
        return this.icons.profile
      default:
        return this.icons.default
